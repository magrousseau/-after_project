<div class="content-container">
  <%#= cl_image_tag @article.photos.first.key, height: 200, width: 300, crop: :fill %>
    <h1> <%= @article.title %> </h1>
    <h3> written by : <%= @article.user.first_name %>  on the <%= @article.date %></h3>
    <p> <%= @article.description %> </p>
    <% @article.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 150, width: 200, crop: :fill %>
    <% end %>
    <%= @article.rich_content %>


    <h4><%= link_to "back", blog_articles_path %></h4>
</div>




