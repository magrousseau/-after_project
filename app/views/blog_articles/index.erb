<%= image_tag('/assets/background/girl.jpg', class: "background-home-image") %>

<div class="content-container">
  <h1>Filtrer par thématiques</h1>

  <% @articles.each do |article| %>
    <div class="blog-card-container">
      <%= cl_image_tag article.photos.first.key, width: 300, crop: :fill, class:"blog-card-img" %>
      <div class="blog-card-text-content">
        <div class="blog-card-content">
          <div class="card-title-content">
            <h2><%= link_to article.title, blog_article_path(article) %></h2>
            <h5> written by : <%= article.user.first_name %> </h5>
          </div>
          <p> <%= article.description %> </p>
        </div>
        <div class="container-btn">
          <h5><%= article.date %></h5>
          <%= link_to "Je découvre",blog_article_path(article), class:"button btn-yellow-black" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
