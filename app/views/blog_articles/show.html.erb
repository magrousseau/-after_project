<div class="blog-container">
  <div class="mb-5">
    <h1 class = "blog-title"> <%= @article.title %> </h1>
    <div class="tag-list-show">
      <% @article.tag_list.each do |tag| %>
        <div class="tag_btn mr-5"><%= tag %></div>
      <% end %>
    </div>
    <div class="author-box">
      <%= cl_image_tag @article.user.avatar.key, class:"avatar" %>
      <div class="author-infos">
        <p> Ã©crit par : <%= @article.user.first_name %> </p>
        <p><%= @article.date.strftime("%d %B, %Y") %></p>
      </div>
    </div>
    <%= cl_image_tag @article.photos.first.key, class:"blog-article-banner my-5" %>
    <p> <%= @article.description %> </p>
    <%= @article.rich_content %>
  </div>


    <%= link_to "back", blog_articles_path, class:"button btn-yellow-black" %>
    <% if @user %>
    <%= link_to "edit", edit_blog_article_path(@article), class:"button btn-yellow-black" %>
    <%= link_to "delete", blog_article_path(@article), class:"button btn-yellow-black",
                                          method: :delete,
                                          data: { confirm: "Are you sure?" } %>

    <% end %>
</div>




